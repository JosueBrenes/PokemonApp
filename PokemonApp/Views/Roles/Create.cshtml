@model PokemonApp.Models.Roles

<style>
    body {
        font-family: "Press Start 2P", cursive;
        background-color: #f4f4f4;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #faf8ef;
        border: 4px solid #333;
        padding: 20px;
        box-shadow: 5px 5px 0px #000;
        text-align: center;
    }

    h2 {
        text-align: center;
        font-size: 20px;
        color: #222;
        margin-bottom: 20px;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-right: 15px;
    }

    label {
        font-size: 12px;
        text-align: left;
        margin-bottom: 5px;
    }

    input {
        font-family: "Press Start 2P", cursive;
        padding: 10px;
        border: 2px solid #333;
        width: 100%;
        box-shadow: 3px 3px 0px #000;
        font-size: 12px;
    }

    .btn {
        font-family: "Press Start 2P", cursive;
        font-size: 16px;
        padding: 15px 25px;
        color: #fff;
        border: 2px solid #333;
        text-align: center;
        box-shadow: 4px 4px 0px #000;
        cursor: pointer;
        width: fit-content;
        margin: 20px auto 0;
    }

    .btn-primary {
        background-color: #28a745;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn:hover {
        transform: scale(1.1);
        box-shadow: 4px 4px 0px #000;
    }
</style>

<div class="container">
    <h2>Create Role</h2>
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <label for="Nombre">Role Name:</label>
        <input type="text" id="Nombre" name="Nombre" required />

        <button type="submit" class="btn btn-primary">Create Role</button>
    </form>
</div>
