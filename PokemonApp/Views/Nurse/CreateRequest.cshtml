@model PokemonApp.Models.CreateRequest

<style>
    body {
        font-family: "Press Start 2P", cursive;
        background-color: #f4f4f4;
        color: #333;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #faf8ef;
        border: 4px solid #333;
        padding: 20px;
        box-shadow: 5px 5px 0px #000;
    }

    h2 {
        text-align: center;
        font-size: 20px;
        color: #222;
        margin-bottom: 20px;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    label {
        font-size: 12px;
        text-align: left;
        margin-bottom: 5px;
    }

    select, textarea {
        font-family: "Press Start 2P", cursive;
        padding: 10px;
        border: 2px solid #333;
        width: 100%;
        box-shadow: 3px 3px 0px #000;
        font-size: 12px;
    }

    .btn {
        font-family: "Press Start 2P", cursive;
        font-size: 14px;
        padding: 10px 15px;
        color: #fff;
        border: 2px solid #333;
        text-align: center;
        box-shadow: 3px 3px 0px #000;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #28a745;
    }

    .btn:hover {
        transform: scale(1.1);
        box-shadow: 4px 4px 0px #000;
    }
</style>

<div class="container">
    <h2>Create Nursing Request</h2>
    <form asp-action="CreateRequest" method="post">
        <div>
            <label for="PokemonName">Select a Pokémon:</label>
            <select id="PokemonName" name="PokemonName">
                @foreach (var pokemon in Model.Pokemons)
                {
                    <option value="@pokemon.Nombre">@pokemon.Nombre</option>
                }
            </select>
        </div>

        <div>
            <label for="Description">Problem Description:</label>
            <textarea id="Description" name="Description"></textarea>
        </div>

        <div>
            <label for="AssignedNurse">Select a Nurse:</label>
            <select id="AssignedNurse" name="AssignedNurse">
                @foreach (var nurse in Model.Nurses)
                {
                    <option value="@nurse.Name">@nurse.Name</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Create Request</button>
    </form>
</div>
