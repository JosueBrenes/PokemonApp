@model PokemonApp.Models.NurseRequest

<h2>Registrar Solicitud de Atención</h2>

@using (Html.BeginForm("CreateRequest", "Nurse", FormMethod.Post))
{
<div class="form-group">
    <label for="PokemonName">Nombre del Pokémon</label>
    @Html.TextBoxFor(m => m.PokemonName, new { @class = "form-control", placeholder = "Ejemplo: Pikachu" })
</div>
<div class="form-group">
    <label for="Description">Descripción del Problema</label>
    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Describe el problema de tu Pokémon" })
</div>
<div class="form-group">
    <label for="AssignedNurse">Enfermera Asignada</label>
    @Html.TextBoxFor(m => m.AssignedNurse, new { @class = "form-control", placeholder = "Ejemplo: Nurse Joy" })
</div>
<button type="submit" class="btn btn-primary">Enviar Solicitud</button>
}
