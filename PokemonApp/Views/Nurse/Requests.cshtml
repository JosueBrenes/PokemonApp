@model IEnumerable<PokemonApp.Models.NurseRequest>

<h2>Solicitudes de Atención</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Pokémon</th>
            <th>Descripción</th>
            <th>Enfermera</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Id</td>
                <td>@request.PokemonName</td>
                <td>@request.Description</td>
                <td>@request.AssignedNurse</td>
                <td>@(request.IsAttended ? "Atendido" : "Pendiente")</td>
            </tr>
        }
    </tbody>
</table>
