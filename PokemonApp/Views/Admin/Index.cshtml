@{
    ViewBag.Title = "Admin Panel";
}

<style>
    body {
        font-family: "Press Start 2P", cursive;
        background-color: #f4f4f4;
        color: #333;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #faf8ef;
        border: 4px solid #333;
        padding: 20px;
        box-shadow: 5px 5px 0px #000;
    }

    h1, h2 {
        text-align: center;
        font-size: 20px;
        color: #222;
    }

    p {
        font-size: 14px;
        line-height: 1.6;
        text-align: center;
    }

    .btn {
        display: inline-block;
        font-size: 12px;
        text-decoration: none;
        padding: 10px 15px;
        margin: 10px;
        color: #fff;
        border: 2px solid #333;
        box-shadow: 3px 3px 0px #000;
        text-align: center;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #28a745;
    }

    .btn-outline-dark {
        background-color: #000;
        color: #fff;
    }

    .btn:hover {
        transform: scale(1.1);
        box-shadow: 4px 4px 0px #000;
    }

    .row {
        margin-top: 20px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .section {
        width: 300px;
        margin: 10px;
        padding: 15px;
        background-color: #fff;
        border: 2px solid #333;
        box-shadow: 4px 4px 0px #000;
        text-align: center;
    }

    main {
        margin-top: 50px;
        margin-bottom: 50px;
    }
</style>

<!-- Content -->
<main>
    <div class="container">
        <h1>Admin Panel</h1>
        <p>Manage users and roles efficiently within the system.</p>

        <div class="row">
            <!-- User Management -->
            <div class="section">
                <h2>User Management</h2>
                <p>Create, edit, and delete system users.</p>
                <a class="btn btn-outline-dark" href="@Url.Action("Index", "User")">Manage Users &raquo;</a>
            </div>

            <!-- Role Management -->
            <div class="section">
                <h2>Role Management</h2>
                <p>Create, edit, and delete roles for users.</p>
                <a class="btn btn-outline-dark" href="@Url.Action("Index", "Roles")">Manage Roles &raquo;</a>
            </div>
        </div>
    </div>
</main>
