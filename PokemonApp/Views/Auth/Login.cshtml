@model PokemonApp.Models.LoginViewModel

<style>
    .form-container {
        max-width: 400px;
        margin: 50px auto;
        background-color: #faf8ef;
        border: 4px solid #333;
        padding: 20px;
        box-shadow: 5px 5px 0px #000;
        font-family: "Press Start 2P", cursive;
    }

        .form-container h2 {
            text-align: center;
            font-size: 20px;
            margin-bottom: 20px;
            color: #222;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-size: 12px;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group select {
            width: 90%;
            padding: 10px;
            font-size: 12px;
            border: 2px solid #333;
            background-color: #fff;
            color: #000;
            box-shadow: 2px 2px 0px #000;
            display: block;
        }

        .form-group select {
            font-family: "Press Start 2P", cursive;
        }

    .btn-submit {
        display: block;
        width: fit-content;
        margin: 20px auto 0 auto;
        padding: 10px 15px;
        font-size: 12px;
        color: #fff;
        background-color: #007bff;
        border: 2px solid #333;
        text-align: center;
        box-shadow: 5px 5px 0px #000;
        cursor: pointer;
    }

        .btn-submit:hover {
            transform: scale(1.1);
            box-shadow: 6px 6px 0px #000;
        }

    .link-register {
        display: block;
        text-align: center;
        margin-top: 15px;
        font-size: 10px;
        color: #007bff;
        text-decoration: none;
    }

        .link-register:hover {
            text-decoration: underline;
        }
</style>

<div class="form-container">
    <h2>Log in</h2>
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
    {
        @Html.ValidationSummary("", new { @class = "text-danger", style = "font-size: 12px;" })

        <div class="form-group">
            @Html.Label("Username", "Username")
            <input type="text" name="Usuario1" class="form-control" placeholder="Enter your username" />
        </div>

        <div class="form-group">
            @Html.Label("Password", "Password")
            <input type="password" name="Contraseña" class="form-control" placeholder="Enter your password" />
        </div>

        <button type="submit" class="btn-submit">Log in</button>
    }

    <a href="@Url.Action("Register", "Auth")" class="link-register">Don't have an account? Register here</a>
</div>

