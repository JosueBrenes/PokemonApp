@{
    ViewBag.Title = "Battle Result";
}

<style>
    body {
        font-family: "Press Start 2P", cursive;
        background-color: #f4f4f4;
        color: #333;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #faf8ef;
        border: 4px solid #333;
        padding: 20px;
        box-shadow: 5px 5px 0px #000;
    }

    h1, h2 {
        text-align: center;
        font-size: 20px;
        color: #222;
    }

    p {
        font-size: 14px;
        line-height: 1.6;
        text-align: center;
    }

    .btn {
        display: block;
        width: fit-content;
        margin: 0 auto 20px auto;
        font-size: 12px;
        padding: 10px 15px;
        color: #fff;
        background-color: #28a745;
        border: 2px solid #333;
        text-align: center;
        box-shadow: 5px 5px 0px #000;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #28a745;
    }

    .btn:hover {
        transform: scale(1.1);
        box-shadow: 4px 4px 0px #000;
    }
</style>

<div class="container">
    <h2>Battle Result</h2>
    <p>@ViewBag.Result</p>
    <a href="/Battle" class="btn btn-primary">Start Another Battle</a>
</div>
