@{
    ViewBag.Title = "Battle Result";
}

<style>
    body {
        font-family: "Press Start 2P", cursive;
        background-color: #f4f4f4;
        color: #333;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #faf8ef;
        border: 4px solid #333;
        padding: 20px;
        box-shadow: 5px 5px 0px #000;
        text-align: center;
    }

    h1, h2 {
        text-align: center;
        font-size: 24px;
        color: #222;
        margin-bottom: 20px;
    }

    p {
        font-size: 16px;
        line-height: 1.6;
        text-align: center;
        margin: 10px 0;
    }

    .winner {
        font-size: 20px;
        font-weight: bold;
        color: #28a745;
    }

    .loser {
        font-size: 20px;
        font-weight: bold;
        color: #dc3545;
    }

    .draw {
        font-size: 20px;
        font-weight: bold;
        color: #ffc107;
    }

    .btn {
        display: inline-block;
        font-size: 14px;
        padding: 10px 20px;
        margin-top: 20px;
        color: #fff;
        background-color: #28a745;
        border: 2px solid #333;
        text-align: center;
        box-shadow: 5px 5px 0px #000;
        cursor: pointer;
        text-decoration: none;
    }

        .btn:hover {
            transform: scale(1.1);
            box-shadow: 6px 6px 0px #000;
        }
</style>

<div class="container">
    <h2>Battle Results</h2>

    <p><strong>Player 1 Rounds Won:</strong> @ViewBag.Player1Wins</p>
    <p><strong>Player 2 Rounds Won:</strong> @ViewBag.Player2Wins</p>

    @if (ViewBag.Player1Wins > ViewBag.Player2Wins)
    {
        <h2 class="winner">Player 1 is the Winner!</h2>
    }
    else if (ViewBag.Player2Wins > ViewBag.Player1Wins)
    {
        <h2 class="winner">Player 2 is the Winner!</h2>
    }
    else
    {
        <h2 class="draw">It's a Draw!</h2>
    }

    <a href="/Battle" class="btn">Start Another Battle</a>
</div>
