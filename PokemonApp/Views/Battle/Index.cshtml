@model IEnumerable<PokemonApp.Models.Pokemon>

<style>
    body {
        font-family: "Press Start 2P", cursive;
        background-color: #f4f4f4;
        color: #333;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #faf8ef;
        border: 4px solid #333;
        padding: 20px;
        box-shadow: 5px 5px 0px #000;
    }

    h1, h2 {
        text-align: center;
        font-size: 20px;
        color: #222;
    }

    .btn {
        display: block;
        width: fit-content;
        margin: 0 auto 20px auto;
        font-size: 12px;
        padding: 10px 15px;
        color: #fff;
        background-color: #28a745;
        border: 2px solid #333;
        text-align: center;
        box-shadow: 5px 5px 0px #000;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #28a745;
    }

    .btn:hover {
        transform: scale(1.1);
        box-shadow: 4px 4px 0px #000;
    }

    select {
        font-family: "Press Start 2P", cursive;
        padding: 10px;
        border: 2px solid #333;
        width: 100%;
        box-shadow: 3px 3px 0px #000;
        font-size: 12px;
        margin-bottom: 20px;
    }
</style>

<div class="container">
    <h2>Select Pokémon for Battle</h2>
    <form method="post" action="/Battle/StartBattle">
        <label for="pokemon1Id">Select First Pokémon:</label>
        <select id="pokemon1Id" name="pokemon1Id">
            @foreach (var pokemon in Model)
            {
                <option value="@pokemon.Id">@pokemon.Nombre</option>
            }
        </select>

        <label for="pokemon2Id">Select Second Pokémon:</label>
        <select id="pokemon2Id" name="pokemon2Id">
            @foreach (var pokemon in Model)
            {
                <option value="@pokemon.Id">@pokemon.Nombre</option>
            }
        </select>

        <button type="submit" class="btn btn-primary">Start Battle</button>
    </form>
</div>
