@model IEnumerable<PokemonApp.Models.Pokemon>

<style>
    body {
        font-family: "Press Start 2P", cursive;
        background-color: #f4f4f4;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 50px auto;
        background-color: #faf8ef;
        border: 4px solid #333;
        padding: 20px;
        box-shadow: 5px 5px 0px #000;
    }

    h2 {
        text-align: center;
        font-size: 20px;
        color: #222;
        margin-bottom: 20px;
    }

    .btn-create {
        display: block;
        width: fit-content;
        margin: 0 auto 20px auto;
        font-size: 12px;
        padding: 10px 15px;
        color: #fff;
        background-color: #28a745;
        border: 2px solid #333;
        text-align: center;
        box-shadow: 5px 5px 0px #000;
        cursor: pointer;
    }

        .btn-create:hover {
            transform: scale(1.1);
            box-shadow: 6px 6px 0px #000;
        }

    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .card {
        background-color: #fff;
        border: 2px solid #333;
        box-shadow: 5px 5px 0px #000;
        padding: 15px;
        text-align: center;
    }

        .card h3 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #000;
        }

        .card p {
            font-size: 12px;
            margin: 5px 0;
            color: #555;
        }

        .card .btn {
            font-size: 10px;
            padding: 5px 8px;
            margin: 5px;
            display: inline-block;
            color: #fff;
            border: 2px solid #333;
            text-align: center;
            box-shadow: 2px 2px 0px #000;
            cursor: pointer;
        }

    .btn-info {
        background-color: #007bff;
    }

    .btn-warning {
        background-color: #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn:hover {
        transform: scale(1.1);
        box-shadow: 3px 3px 0px #000;
    }
</style>

<div class="container">
    <a class="btn-create" href="@Url.Action("Create", "Pokedex")">Add Pokémon</a>
    <h2>Pokémon List</h2>
    <div class="card-grid">
        @foreach (var pokemon in Model)
        {
            <div class="card">
                <h3>@pokemon.Nombre</h3>
                <p><strong>Type:</strong> @pokemon.Tipo</p>
                <p><strong>Weakness:</strong> @pokemon.Debilidad</p>
                <p><strong>Evolution:</strong> @pokemon.Evolucion</p>
                <p><strong>Weight:</strong> @pokemon.Peso kg</p>
                <div>
                    <a class="btn btn-info" href="@Url.Action("Details", "Pokedex", new { id = pokemon.Id })">Details</a>
                    <a class="btn btn-warning" href="@Url.Action("Edit", "Pokedex", new { id = pokemon.Id })">Edit</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Pokedex", new { id = pokemon.Id })">Delete</a>
                </div>
            </div>
        }
    </div>
</div>
