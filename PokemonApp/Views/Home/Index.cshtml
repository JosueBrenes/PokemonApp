@{
    ViewBag.Title = "Home Page";
}

<style>
    body {
        font-family: "Press Start 2P", cursive;
        background-color: #f4f4f4;
        color: #333;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #faf8ef;
        border: 4px solid #333;
        padding: 20px;
        box-shadow: 5px 5px 0px #000;
    }

    h1, h2 {
        text-align: center;
        font-size: 20px;
        color: #222;
    }

    p {
        font-size: 14px;
        line-height: 1.6;
        text-align: center;
    }

    .btn {
        display: inline-block;
        font-size: 12px;
        text-decoration: none;
        padding: 10px 15px;
        margin: 10px;
        color: #fff;
        border: 2px solid #333;
        box-shadow: 3px 3px 0px #000;
        text-align: center;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #28a745;
    }

    .btn-outline-dark {
        background-color: #000;
        color: #fff;
    }

    .btn:hover {
        transform: scale(1.1);
        box-shadow: 4px 4px 0px #000;
    }

    .row {
        margin-top: 20px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .section {
        width: 300px;
        margin: 10px;
        padding: 15px;
        background-color: #fff;
        border: 2px solid #333;
        box-shadow: 4px 4px 0px #000;
        text-align: center;
    }

    main {
        margin-top: 50px;
        margin-bottom: 50px;
    }
</style>

<!-- Content -->
<main>
    <div class="container">
        <h1>Welcome to the Pokémon Management System</h1>
        <p>Manage your trainers, Pokémon, users, and battles all in one place.</p>
        @if (ViewBag.RolId == 4)
        {
            <a href="@Url.Action("Index", "Pokedex")" class="btn btn-primary">Explore the Pokédex &raquo;</a>
        }

        <div class="row">
            <!-- Trainer View -->
            @if (ViewBag.RolId == 4)
            {
                <div class="section">
                    <h2>Trainer View</h2>
                    <p>Manage trainers' Pokémon teams, explore stats, and handle challenges.</p>
                    <a class="btn btn-outline-dark" href="@Url.Action("Index", "Trainer")">Go to Trainers &raquo;</a>
                </div>
            }

            <!-- Admin View -->
            @if (ViewBag.RolId == 2)
            {
                <div class="section">
                    <h2>Admin View</h2>
                    <p>Manage the Pokédex, control the system, and ensure proper functionality.</p>
                    <a class="btn btn-outline-dark" href="@Url.Action("Index", "Admin")">Admin Panel &raquo;</a>
                </div>
            }

            <!-- Nurse View -->
            @if (ViewBag.RolId == 11)
            {
                <div class="section">
                    <h2>Nurse View</h2>
                    <p>Handle nursing requests, healing, and support for injured Pokémon.</p>
                    <a class="btn btn-outline-dark" href="@Url.Action("Index", "Nurse")">Go to Nursing &raquo;</a>
                </div>
            }

            <!-- Trainer's Team -->
            @if (ViewBag.RolId == 4)
            {
                <div class="section">
                    <h2>Trainer's Team</h2>
                    <p>Set up and view Pokémon teams for trainers.</p>
                    <a class="btn btn-outline-dark" href="@Url.Action("Team", "Trainer")">View Teams &raquo;</a>
                </div>
            }

            <!-- Battle Challenges -->
            @if (ViewBag.RolId == 4)
            {
                <div class="section">
                    <h2>Battle Challenges</h2>
                    <p>Create and manage battle challenges between Pokémon trainers.</p>
                    <a class="btn btn-outline-dark" href="@Url.Action("Index", "Battle")">Manage Challenges &raquo;</a>
                </div>
            }

            <!-- Nursing Requests -->
            @if (ViewBag.RolId == 11)
            {
                <div class="section">
                    <h2>Nursing Requests</h2>
                    <p>Manage nursing requests for injured Pokémon.</p>
                    <a class="btn btn-outline-dark" href="@Url.Action("Requests", "Nurse")">View Requests &raquo;</a>
                </div>
            }

            <!-- Submit Pokémon to Nursing -->
            @if (ViewBag.RolId == 11)
            {
                <div class="section">
                    <h2>Submit Pokémon</h2>
                    <p>Submit a Pokémon to the nursing center for healing and care.</p>
                    <a class="btn btn-outline-dark" href="@Url.Action("CreateRequest", "Nurse")">Submit to Nursing &raquo;</a>
                </div>
            }
        </div>
    </div>
</main>
